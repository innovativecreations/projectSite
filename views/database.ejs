<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <button id="toggleButton" class="toggle-btn">Toggle Night/Light Mode</button>
    <div class="container">
        <h2>Project Database</h2>
        <table>
            <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Repo Link</th>
                    <th>Thumbnail</th>
                </tr>
            </thead>
            <tbody>
                <% projects.forEach((project, index) => { %>
                    <tr>
                        <% if (editable) { %>
                            <form action="/edit" method="post">
                                <input type="hidden" name="index" value="<%= index %>">
                                <td><input type="text" name="name" value="<%= project.name %>" required></td>
                                <td><input type="url" name="repo" value="<%= project.repo %>" required></td>
                                <td><input type="url" name="thumbnail" value="<%= project.thumbnail %>" required></td>
                                <td><button type="submit">Save</button></td>
                            </form>
                        <% } else { %>
                            <td><%= project.name %></td>
                            <td><a href="<%= project.repo %>"><%= project.repo %></a></td>
                            <td><img src="<%= project.thumbnail %>" alt="<%= project.name %> Thumbnail"></td>
                        <% } %>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="/script.js"></script>
</body>
</html>
